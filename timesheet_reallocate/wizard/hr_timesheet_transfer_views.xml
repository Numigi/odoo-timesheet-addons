<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="timesheet_transfer_wizard_form" model="ir.ui.view">
        <field name="name">Timesheet Transfer</field>
        <field name="model">hr.timesheet.transfer</field>
        <field name="arch" type="xml">
            <form string="Reimput">
                <sheet>
                    <label for="reason" string="Reason of Reimputation" class="oe_edit_only"/>
                    <br/>
                    <field name="reason" required="1"/>
                    <group>
                        <field name="date_time"  required="1"/>
                    </group>
                    <group>
                        <field name="project_id" required="1"/>
                        <field name="task_id" required="1"/>
                     </group>
                    <group>
                        <field name="timesheet_ids"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_transfer" class="oe_highlight" string="Transfer Timesheets" type="object"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="timesheet_transfer_wizard_action" model="ir.actions.act_window">
        <field name="name">Reimput</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.timesheet.transfer</field>
        <field name="binding_model_id" ref="analytic.model_account_analytic_line"/>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="timesheet_reallocate.timesheet_transfer_wizard_form"/>
        <field name="target">new</field>
        <field name="context">{
            'default_timesheet_ids': active_ids,
        }
        </field>
    </record>

</odoo>